@model BursApp.Models.Burslar
@{
    ViewBag.Title = "Edit";
}
<h2>Burs Düzenle</h2>

<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Home/Edit/@Model.BursID" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık<span class="required"></span></label>
            <div class="col-lg-10">
                <input class="form-control" id="BursBaslik" name="BursBaslik" minlength="5" type="text" required value="@Model.BursBaslik" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="BursAciklama" required class="ckeditor">@Model.BursAciklama</textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Burs Miktarı <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="BursMiktari" required class="ckeditor">@Model.BursMiktari</textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">KAYDET</button>
                <button class="btn btn-default" type="button"><a href="/Home/Index">İptal</a></button>
            </div>
        </div>
    </form>
</div>